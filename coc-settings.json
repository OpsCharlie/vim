{
    "ansible.ansible.useFullyQualifiedCollectionNames": false,
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnType": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enableMessage": "jump",
    "diagnostic.floatConfig": { "border": true },
    "diagnostic.messageTarget": "float",
    "diagnostic.virtualText": true,
    "hover.floatConfig": { "border": true },
    "explorer.previewAction.onHover": false,
    // "explorer.icon.enableVimDevicons": false,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source":"vim-devicons",
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
        "<C-V>": "open:vsplit",
        "<C-X>": "open:split",
        "<C-T>": "open:tab",
        "C": "cd",
        ">": "cd",
        "<": ["wait", "gotoParent"]
    },
    "explorer.file.reveal.whenOpen": true,
    "snippets.snipmate.enable": false
}
